<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity_post">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#00A3FF"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="#00A3FF"
            android:src="@drawable/ic_baseline_arrow_back_24"
            app:layout_constraintBottom_toTopOf="@+id/textView10"
            android:layout_gravity="center_vertical"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:background="#00A3FF"
            android:text="@string/sub_title7"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imageView"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_weight="1"
            android:textSize="25sp"
            android:textStyle="bold"
            android:textColor="#fff"
            android:gravity="center_vertical"
            android:paddingLeft="30dp"/>

        <Button
            android:id="@+id/post_save_button"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:background="@drawable/shape_round"
            android:text="완료"
            android:textSize="15dp"
            android:textColor="#00A3FF"
            android:textStyle="bold"
            android:layout_gravity="center_vertical" />
    </LinearLayout>



    <EditText
        android:id="@+id/post_title_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="제목"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:paddingTop="15dp"
        android:layout_margin="10dp"/>

    <EditText
        android:id="@+id/post_contents_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/contents_info"
        android:textSize="16sp"
        android:textColor="@android:color/black"
        android:background="@null"
        android:layout_margin="10dp"
        android:gravity="top"/>
</LinearLayout>